# Base image
FROM python:3.11-slim

# Setup working directory
WORKDIR /app

# Copy requirements.txt and install dependencies
COPY docker/training/requirements.txt .
RUN pip install --upgrade pip && pip install --no-cache-dir --default-timeout=100 -r requirements.txt

# Copy the training script to the working directory
COPY docker/training/train.py ./train.py

# Declare the volume mount point for models
VOLUME ["/app/models"]

# DONE: Set the command to run the training script
CMD ["python", "train.py"]
